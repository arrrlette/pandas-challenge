   "source": [
    "#stores the number of unique items as a variable\n",
    "Num_Unique_Items = len(purchase_data_df[\"Item Name\"].unique())\n",
    "#stores the average price of items as a variable\n",
    "Average_Item_Price = round((purchase_data_df[\"Price\"].mean()),2)\n",
    "#stores the number of purchases as a variable\n",
    "Num_Purchases = len(purchase_data_df['Purchase ID'].unique())\n",
    "#stores the sum of purchases as a variable\n",
    "Total_Revenue = purchase_data_df['Price'].sum()\n",
    "\n",
    "#creates a new summary dataframe that includes the calculations we did above: Number of Unique Items,Average Price, Number of Purchases, and Total Revenue\n",
    "purchasing_data_dict = [{\"Number of Unique Items\": Num_Unique_Items, \"Average Price\": Average_Item_Price, \"Number of Purchases\": Num_Purchases, \"Total Revenue\": Total_Revenue}]\n",
    "purchasing_analysis_df = pd.DataFrame(purchasing_data_dict)\n",
    "\n",
    "#formatting:\n",
    "purchasing_analysis_df[\"Average Price\"] = purchasing_analysis_df[\"Average Price\"].map(\"${:,.2f}\".format)\n",
    "purchasing_analysis_df[\"Total Revenue\"] = purchasing_analysis_df[\"Total Revenue\"].map(\"${:,.2f}\".format)\n",
    "\n",
    "purchasing_analysis_df"
   ]
