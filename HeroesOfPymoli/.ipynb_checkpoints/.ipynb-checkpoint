    "\n",
    "#group by age bin\n",
    "grouped_age_dem_df = non_dup_df.groupby(\"Age Ranges\")\n",
    "\n",
    "#grouped_age_dem_df[[\"SN\"]].count()  #for testing\n",
    "\n",
    "#create a variable to store the count of players from the grouped age data\n",
    "total_count = grouped_age_dem_df['SN'].count()\n",
    "\n",
    "#calculate percentage of players and store in variable. TotalPlayers is a variable we created earlier to store total num of players\n",
    "player_perc = (total_count/TotalPlayers)*100\n",
    "\n",
    "\n",
    "#create new data frame with grouped info and calculations\n",
    "age_df = pd.DataFrame({\"Total Count\": total_count, \"Percentage of Players\": player_perc})\n",
