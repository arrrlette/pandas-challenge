    "#create bins and bin labels for the age column\n",
    "age_bins = [0,9,14,19,24,29,34,39,100]\n",
    "age_labels = [\"<10\",\"10-14\",\"15-19\",\"20-24\",\"25-29\",\"30-34\",\"35-39\",\"40+\"]\n",
    "\n",
    "#append age bins to the non dupe DF we created earlier to store just unique SNs\n",
    "purchase_data_df[\"Age Ranges\"] = pd.cut(purchase_data_df[\"Age\"], age_bins, labels = age_labels)\n",
    "\n",
    "#group by age bin\n",
    "grouped_age_purch_df = purchase_data_df.groupby(\"Age Ranges\")\n",
    "\n",
    "#create a variable to store the purchase count \n",
    "purchase_count = grouped_age_purch_df['SN'].count()\n",
    "\n",
    "#create a variable to store sum of all purchases\n",
    "sum_purchase = grouped_age_purch_df['Price'].sum()\n",
    "\n",
    "#create a variable to store average purchase price: sum of purchase price divided by count of purchases\n",
    "avg_purch_price = sum_purchase/purchase_count\n",
    "\n",
    "#create a variable to store average total purchase per person. referenced grouped_age_dem dataframe that counts unique SN's\n",
    "avg_purch_per_person = sum_purchase/grouped_age_dem_df['SN'].count()\n",
    "\n",
    "#create new data frame with grouped info and calculations\n",
    "age_df = pd.DataFrame({\"Purchase Count\": purchase_count,\"Average Purchase Price\": avg_purch_price, \"Total Purchase Value\":sum_purchase, \"Avg Total Purchase per Person\": avg_purch_per_person})\n",
    "\n",
    "#formatting:\n",
    "age_df[\"Average Purchase Price\"] = age_df[\"Average Purchase Price\"].map(\"${:,.2f}\".format)\n",
