    "#drop any duplicate SNs so we can get a unique count of players by gender and store in its own dataframe\n",
    "non_dup_df = purchase_data_df.drop_duplicates(\"SN\")\n",
    "\n",
    "#group by gender\n",
    "grouped_gender = non_dup_df.groupby(['Gender'])  #this is a groupby object\n",
    "\n",
    "#create a variable to store the count of screen names (so unique players) from the grouped gender data\n",
    "grouped_gender_count = grouped_gender['SN'].count()\n",
    "\n",
    "#create a variable to calculate and store percentages\n",
    "gender_perc = (grouped_gender_count/TotalPlayers) * 100\n",
    "\n",
    "#create new data frame with grouped info and calculations\n",
    "gender_df = pd.DataFrame({\"Total Count\": grouped_gender_count, \"Percentage of Players\": gender_perc})\n",
    "\n",
    "#formatting:\n",
    "gender_df[\"Percentage of Players\"] = gender_df[\"Percentage of Players\"].map(\"{:,.2f}%\".format)\n",
