   "source": [
    "#groupby gender using original dataframe\n",
    "grouped_gender_analysis = purchase_data_df.groupby(['Gender'])\n",
    "\n",
    "#create variable to store the count of purchases from the grouped gender data\n",
    "purchase_count = grouped_gender_analysis['Item ID'].count()\n",
    "\n",
    "#calculate total purchase price and average purchase price\n",
    "total_price = grouped_gender_analysis['Price'].sum()\n",
    "average_price = total_price/purchase_count\n",
    "\n",
    "#calculate average total purchase per person (so per unique SN)\n",
    "average_total_per_person = total_price/grouped_gender_count\n",
    "\n",
    "\n",
    "#create new data frame with grouped info and calculations\n",
    "gender_analysis_df = pd.DataFrame({\"Purchase Count\": purchase_count, \"Average Purchase Price\": average_price, \"Total Purchase Price\": total_price, \"Average Total Purchase per Person\":average_total_per_person})\n",
    "\n",
    "#formatting:\n",
    "gender_analysis_df[\"Average Purchase Price\"] = gender_analysis_df[\"Average Purchase Price\"].map(\"${:,.2f}\".format)\n",
    "gender_analysis_df[\"Total Purchase Price\"] = gender_analysis_df[\"Total Purchase Price\"].map(\"${:,.2f}\".format)\n",
    "gender_analysis_df[\"Average Total Purchase per Person\"] = gender_analysis_df[\"Average Total Purchase per Person\"].map(\"${:,.2f}\".format)\n",
    "\n",
    "gender_analysis_df\n"
